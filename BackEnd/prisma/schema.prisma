datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
  config   = {
    ssl: {
      rejectUnauthorized: false,
      }
  }
}

generator client {
  provider = "prisma-client-js"
}

// schema.prisma

model User {
  id          String      @id @default(uuid()) @map("_id") @test.IntegrationTest.Int
  username    String
  mail        String
  password    String
  images      Image[]
}

model Image {
  id          Int         @id @default(autoincrement()) @test.IntegrationTest.Int
  filename    String
  image_type  String
  userId      String
  user        User        @relation(fields: [userId], references: [id])
}

// Note: You may need to adjust the data types and relations based on your application requirements.
